{
  "version": "0.1.6",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "ignoreChanges": [
        "*.md"
      ],
      "message": "chore(release): publish"
    },
    "publish": {
      "npmClient": "npm",
      "allowBranch": [
        "main",
        "refactor/plugin"
      ]
    }
  }
}
